<%- contentFor('body') %>
<body onload="ChangePasswordOnLoad();">
    <div class="nav-wrapper" style="background: #0B274F;">
        <div id="loginName"><b>Olá</b></div>
        <div class="brand-logo center" style="padding: 0.5%; margin-left: 1%; color: whitesmoke; font-size: 130%" ><b>Troca de Senha</b>
            <div class="logoSimbolo"><b>®</b></div>
            <div class="logoMeitech" style="font-size: 100%"><b>CEP</b></div>
        </div>
    </div>
    <!-- **************************************************************************************************************************************************************************** -->

    <div class="dropup">
        <div id="dropbtn" alt="Submit"></div>
        <div class="dropup-content">
            <a onclick="LoginOptions('Perfil');">Perfil</a>
            <b onclick="LoginOptions('Config');" style="color: #4d4f52">&nbsp&nbspAlterar a Senha</b>
            <b style="color: #4d4f52">&nbsp&nbsp___________________</b>
            <a onclick="LoginOptions('Logout');">Sair</a>
        </div>
    </div>

    
    <div id="dvChnagePasswordBorder">
        <div id="dvChnagePassword">
            <input type="password" id="OldPassword" name="txtOldPassword" placeholder="Senha Atual...!">
            <input type="password" id="NewPassword" name="txtNewPassword" placeholder="Nova Senha...!">
            <input type="password" id="ConfirmNewPassword" name="txtConfirmNewPassword" placeholder="Confirmar Senha...!">
            <button id="ChangePasswordButton" name="btnChangePassword" onclick="ChangePassword();">Trocar Senha</button>
        </div>
    </div>

    <button id="BackChangePassword" name="btnBackChangePassword" onclick="BackChangePassword();">Voltar</button>
</body>
<footer>
    <div class="dvRodape">
        <div class="copyright"> Copyright © 2019 CEP System - Todos os direitos reservados</div>
    </div>
</footer>