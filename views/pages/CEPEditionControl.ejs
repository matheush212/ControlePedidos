<!-- Envia o body abaixo para a pagina principal (Layout.ejs) --> 
<%- contentFor('body') %>
<body onload="EditCepOnLoad();">
    <div class="nav-wrapper" style="background: #0B274F;">
        <div id="loginName"><b>Olá</b></div>
        <div class="brand-logo center" style="padding: 0.5%; margin-left: 5.5%; color: whitesmoke; font-size: 130%" ><b>Edição - CEP</b> 
            <div class="logoSimbolo"><b>®</b></div>
            <div class="logoMeitech" style="font-size: 100%"><b>CEP</b></div>
        </div>
    </div>
    <!-- **************************************************************************************************************************************************************************** -->

    <div class="dropup">
        <div id="dropbtn" alt="Submit"></div>
        <div class="dropup-content">
            <a onclick="LoginOptions('Perfil');">Perfil</a>
            <a onclick="LoginOptions('ChangePassword');">Alterar a Senha</a>
            <b style="color: #4d4f52">&nbsp&nbsp___________________</b>
            <a onclick="LoginOptions('Logout');">Sair</a>
        </div>
    </div>

    <div id="iconsEdit">
        <div id="iconEditFornecedor" style="width: 100%; height:7%; margin-top: 60%;">
            <img src="" id="imgEditFornecedor" onclick="ClearEditField('EditFornecedor')">
        </div>
        <div id="iconEditNumeroPedido" style="width: 100%; height:7%; margin-top: 28%;">
            <img src="" id="imgEditNumeroPedido" onclick="ClearEditField('EditNumeroPedido')">
        </div>
        <div id="iconEditDataEnvio" style="width: 100%; height:7%; margin-top: 29%;">
            <img src="" id="imgEditDataEnvio" onclick="ClearEditField('EditDataEnvio')">
        </div>
        <div id="iconEditDataPrevistaEntrega" style="width: 100%; height:7%; margin-top: 29%;">
            <img src="" id="imgEditDataPrevistaEntrega" onclick="ClearEditField('EditDataPrevistaEntrega')">
        </div>
        <div id="iconEditDataRealEntrega" style="width: 100%; height:7%; margin-top: 29%;">
            <img src="" id="imgEditDataRealEntrega" onclick="ClearEditField('EditDataRealEntrega')">
        </div>
        <div id="iconEditInformacaoAdicional" style="width: 100%; height:7%; margin-top: 110%;">
            <img src="" id="imgEditInformacaoAdicional" onclick="ClearEditField('EditInformacaoAdicional')">
        </div>
    </div>   

    <div id="title_sheet_control_edit">CEP - </div>
    <div id="cep_sheet_control_edit">
        <div id="ItensTitlesEdit">
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspFornecedor</div>
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspNúmero do Pedido</div>
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspData de Envio</div>
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspData Prevista Entrega</div>
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspData Real da Entrega</div>
            <div class="lblEquipmentDataEdit" style="padding-top: 2.5%;">&nbspStatus da Entrega</div>
            <div class="lblItemAddContentEdit" style="padding-top: 2.5%;">&nbspInformações Adicionais</div>
        </div>
        <div id="ItensContentsEdit">
            <input type="text" id="EditFornecedor" class="txtEditItemContent" name="txtEditFornecedor" style="background-color: rgb(207, 207, 207)">
            <input type="text" id="EditNumeroPedido" class="txtEditItemContent" name="txtEditNumeroPedido">
            <input type="date" id="EditDataEnvio" class="txtEditItemContent" name="txtEditDataEnvio" style="padding-left: 15%; background-color: rgb(207, 207, 207)">
            <input type="date" id="EditDataPrevistaEntrega" class="txtEditItemContent" name="txtEditDataPrevistaEntrega" style="padding-left: 15%;">
            <input type="date" id="EditDataRealEntrega" class="txtEditItemContent" name="txtEditDataRealEntrega" style="padding-left: 15%; background-color: rgb(207, 207, 207)">
            <select id="EditStatusEntrega" class="txtEditItemContent" name="cbxEditStatusEntrega" style="text-align-last: center;">
                    <option value="Entregue" style="font-size: 100%; font-weight: bold;">Entregue</option>
                    <option value="Chegando" style="font-size: 100%; font-weight: bold;">Chegando</option>
                    <option value="Dentro do Prazo" style="font-size: 100%; font-weight: bold;">Dentro do Prazo</option>
                    <option value="Atrasado" style="font-size: 100%; font-weight: bold;">Atrasado</option>
            </select>
            <textarea type="text" id="EditInformacaoAdicional" class="txtEditItemAddContent" name="txtEditInformacaoAdicional" style="background-color: rgb(207, 207, 207)"></textarea>
        </div>   
    </div>

    <button id="SaveAndEditSend" name="btnSaveAndEditSend" onclick="CheckAndSendEditData();">Salvar e Enviar!</button>

    <div id="buttonsEditCEP">
        <button id="EditCEP" class="buttonsEditClass" name="btnEditEditCEP" onclick="EditFieldsControl();">Editar</button>
        <button id="RestoreCEP" class="buttonsEditClass" name="btnRestoreCEP" onclick="RestoreCEP();">Restaurar</button>
        <button id="RemoveCEP" class="buttonsEditClass" name="btnRemoveCEP" onclick="RemoveCEP();">Excluir</button>
        <button id="BackToCEPReports" class="buttonsEditClass" name="btnBackToCEPReports" onclick="BackToCEPReports();">Voltar</button>
    </div>
</body>
